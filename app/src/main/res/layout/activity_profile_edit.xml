<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Profile_Edit_Activity"
    android:background="@drawable/intro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/button_boarder">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:fontFamily="@font/lobster"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#009B85"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Edit your profile"
                android:fontFamily="@font/roboto"
                android:id="@+id/Edit_text_Profile"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Update your profile Picture"
                android:fontFamily="@font/roboto"
                android:id="@+id/Edit_pic_Profile"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Change Email"
                android:fontFamily="@font/roboto"
                android:id="@+id/Edit_text_Change_Email"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Change Password"
                android:fontFamily="@font/roboto"
                android:id="@+id/ChangePassword"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Delete profile"
                android:fontFamily="@font/roboto"
                android:id="@+id/Delete_button"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="Log Out"
                android:fontFamily="@font/roboto"
                android:id="@+id/LogOut"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>










        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
