<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".SignupActivity"
    android:background="@drawable/intro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/button_boarder">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:fontFamily="@font/lobster"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#009B85"/>


            <EditText
                android:id="@+id/SignupFullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Full Name"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/SignupEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Email"
                android:inputType="text|textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/SignupDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_access_time_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Select Date of Birth(dd/mm/yy)"
                android:inputType="date"
                android:focusable="false"
                android:padding="8dp"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/radio_group_gender"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/dateOfBirth"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radio_Female"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source"
                    android:text="Female"
                    android:padding="8dp"
                    android:background="@drawable/button_boarder"
                    android:textColor="#555555"
                    android:textSize="17dp" />

                <RadioButton
                    android:id="@+id/radio_Male"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/source"
                    android:background="@drawable/button_boarder"
                    android:text="Male"
                    android:textColor="#555555"
                    android:textSize="17dp" />

            </RadioGroup>

            <EditText
                android:id="@+id/SignupHeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_height_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Height"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/SignupWeight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_monitor_weight_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Weight"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/SignupPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Password"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black" />
            <EditText
                android:id="@+id/SignupC_Password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_boarder"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:fontFamily="@font/source"
                android:hint="Confirm Password"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/black" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:fontFamily="@font/roboto"
                android:id="@+id/sighnup_button"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                app:cornerRadius="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginRedirectText"
                android:text="Already an user? login"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="#009B85"
                android:fontFamily="@font/source"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ProgressBar"
                android:elevation="10dp"
                android:visibility="gone"
                android:layout_marginLeft="50dp"/>





        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>