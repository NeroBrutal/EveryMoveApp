<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
tools:context=".ChangeProflePassword"
android:background="@drawable/intro">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="24dp"
        android:background="@drawable/button_boarder">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Your Password"
            android:fontFamily="@font/lobster"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#009B85"/>


        <EditText
            android:id="@+id/Old_Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/source"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Authenticate"
            android:fontFamily="@font/roboto"
            android:id="@+id/Authenticate_Button"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto"
            android:id="@+id/AuthenticateText"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#009B85"/>

        <EditText
            android:id="@+id/Edit_New_Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/source"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/Edit_New_PasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/source"
            android:hint="Re-Enter New Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Save"
            android:fontFamily="@font/roboto"
            android:id="@+id/Edit_save_button"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="40dp"/>







    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>
